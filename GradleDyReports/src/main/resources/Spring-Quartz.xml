<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Quartz Job -->
	<bean name="MDSDailyJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.vdi.batch.mds.MDSProcessDaily" />
	</bean>

	
	<!-- Cron Trigger, run daily every 15:00 -->
	<bean id="cronTriggerMDSDailyJob" 
                class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="MDSDailyJob" />
		<property name="cronExpression" value="0 0 15 * * ? *" />
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTriggerMDSDailyJob" />
			</list>
		</property>
	</bean>

</beans>